{
  "compilerOptions": {
    "target": "ES6", 
    "module": "ESNext", 
    "moduleResolution": "Node", 
    "outDir": "./dist", 
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES6"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
